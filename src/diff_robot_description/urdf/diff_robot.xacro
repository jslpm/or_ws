<?xml version='1.0'?>
<robot name="mobile_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- <xacro:include filename="$(find diff_robot_description)/urdf/diff_robot.gazebo" /> -->

    <!-- LINKS -->

    <link name="robot_footprint"></link>

    <link name='chassis'>
        <pose>0 0 0.1 0 0 0</pose>

        <inertial>
            <mass value="15.0" />
            <origin xyz="0.0 0 0" rpy=" 0 0 0" />
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>

        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0" />
            <geometry>
                <box size="0.4 0.25 0.1" />
            </geometry>
        </collision>

        <visual name='chassis_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0" />
            <geometry>
                <box size="0.4 0.25 0.1" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>

        <collision name='back_caster_collision'>
            <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0" />
            <geometry>
                <sphere radius="0.0499" />
            </geometry>
        </collision>

        <visual name='back_caster_visual'>
            <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0" />
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </visual>

        <collision name='front_caster_collision'>
            <origin xyz="0.15 0 -0.05" rpy=" 0 0 0" />
            <geometry>
                <sphere radius="0.0499" />
            </geometry>
        </collision>

        <visual name='front_caster_visual'>
            <origin xyz="0.15 0 -0.05" rpy=" 0 0 0" />
            <geometry>
                <sphere radius="0.05" />
            </geometry>

        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <mass value="5" />
            <origin xyz="0.0 0 0" rpy=" 0 0 0" />
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
        </collision>

        <inertial>
            <mass value="5" />
            <origin xyz="0.0 0 0" rpy="0 0 0" />
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <link name="camera">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
                <!-- <mesh filename = "package://mobile_robot_description/meshes/camera.dae" scale="0.5 0.5 0.5"/> -->
            </geometry>
            <material name="magenta">
                <color rgba="0.96 0 0.53 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1" />
            <origin xyz="0.0 0 0" rpy=" 0 0 0" />
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
    </link>

    <link name="hokuyo">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
                <!-- <mesh filename = "package://mobile_robot_description/meshes/hokuyo.dae"/> -->
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </collision>

        <inertial>
            <mass value="1e-5" />
            <origin xyz="0.0 0 0" rpy=" 0 0 0" />
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>

    </link>

    <!-- JOINTS -->
    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0 0 0.1" rpy="0 0 0" />
        <parent link="robot_footprint" />
        <child link="chassis" />
    </joint>

    <joint type="continuous" name="left_wheel_joint">
        <origin xyz="0 0.15 0" rpy="0 0 0" />
        <child link="left_wheel" />
        <parent link="chassis" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="10000" velocity="1000" />
        <dynamics damping="1.0" friction="1.0" />
    </joint>

    <joint type="continuous" name="right_wheel_joint">
        <origin xyz="0 -0.15 0" rpy="0 0 0" />
        <child link="right_wheel" />
        <parent link="chassis" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="10000" velocity="1000" />
        <dynamics damping="1.0" friction="1.0" />
    </joint>

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.2 0 0" rpy="0 0 0" />
        <child link="camera" />
        <parent link="chassis" />
        <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>

    <joint type="fixed" name="hokuyo_joint">
        <origin xyz="0.15 0 0.1" rpy="0 0 0" />
        <child link="hokuyo" />
        <parent link="chassis" />
    </joint>

</robot>